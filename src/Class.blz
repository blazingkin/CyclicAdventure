constructor Class(type)

    if type == "Knight"
        base_strength = 10
        base_agility = 10
        base_intelligence = 3
        base_gold = 100
    else if type == "Mage"
        base_strength = 5
        base_agility = 5
        base_intelligence = 15
        base_gold = 75
    end


    :show
        type
    end

end

static_classes = [Class("Knight"), Class("Mage")]


:classes
    static_classes
end

:class_name(num)
    classes()[num]
end